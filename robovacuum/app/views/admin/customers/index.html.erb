<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Password</th>
      <th>First name</th>
      <th>Last name</th>
      <th>City</th>
      <th>Postal code</th>
      <th>Province</th>
      <th></th>
    </tr>
  </thead>
<tbody>
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.email %></td>
      <td><%= customer.password %></td>
      <td><%= customer.first_name %></td>
      <td><%= customer.last_name %></td>
      <td><%= customer.city %></td>
      <td><%= customer.postal_code %></td>
      <td><%= customer.province.name %></td>
      <td><%= link_to 'Show', admin_customer_path(customer) %>
          <%= link_to 'Edit', edit_admin_customer_path(customer) %>
          <%= link_to 'Destroy', admin_customer_path(customer), method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>

<br />

