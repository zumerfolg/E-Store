<!DOCTYPE html>
<html>
<head>
  <title>Robovacuum</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="admin">
  
    <div id="wrapper">
 
      <div id="header">
        <h1 id="site_title" class="site_title">Cool Admin Depot</h1>
        <ul id="tabs">
          <li id="customers"><%= link_to "Customers", admin_customers_path %></li>
          <li id="dashboard" class="current"><%= link_to "Dashboard", admin_products_path %></li>
          <li id="orders"><%=link_to "Orders", admin_orders_path %></li>
          <li id="products"><%=link_to "Products", admin_products_path %></li>
          <li id="provinces"><%=link_to "Provinces", admin_provinces_path %></li>
          <li id="abouts"><%=link_to "Abouts", admin_abouts_path %></li>          
        </ul>
      </div>
      
    </div>
    
    <div id="title_bar" class="title_bar">
            <div id="titlebar_left">
              <span class="breadcrumb">
                  <a href="/admin">Admin</a> <span class="breadcrumb_sep">/</span>
              </span>
              <h2 id="page_title"><%=flash[:title]%></h2>
            </div>
            <div id="titlebar_right"></div>
      </div>    

      
    <div id="admin_content" class="without_sidebar">
       <div id="main_content_wrapper">
          <div id="main_content">
             <%= yield %>
          </div>
       </div>
    </div>  



</body>
</html>
