<%=form_tag(check_out_path, :method => :post, :id => 'cart_form') do %>
  <div class="title_container">
     <h1 class="title">Shopping Cart</h1>
     <div><%=image_submit_tag("checkout.png", :alt => "check out")%></div>
  </div>
  <div class="clear"></div>
  <table summary="Contents of the shopping cart">
    <thead>
      <tr>
        <th colspan="2">Description</th>
        <th>Shipping</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td colspan="6">
          <div class="cart_shipping">
            <dl>
              <dd>SubTotal:</dd>
              <dd>44002</dd>
            </dl>
          </div>
        </td>
      </tr>
    </tfoot>
    <tbody>
      <% @my_cart.each do |product|%>
      <tr>
        <td><%=link_to(image_tag(product.image), product_path(product))%></td>
        <td>
          <h3><%=link_to product.name,  product_path(product)%></h3>
          <h4>
             Model:&nbsp;<span class="normal"><%= product.model_number %></span>
          </h4>
          <div class="price"><%= number_to_currency(product.price, :precision => 2) %></div>
        </td>
        <td>Leaves in 1-2 days</td>
        <td><%= text_field_tag(:quantity, "", :size => 6) %></td>
        <td><%= number_to_currency(product.price, :precision => 2)%></td>
        <td></td>        
      </tr>
      <% end %>
    </tbody>
  </table>
<% end%>